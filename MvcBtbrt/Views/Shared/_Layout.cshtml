<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/CSS/FontAwesome")
    @Styles.Render("~/CSS/Bootstrap")
    @Styles.Render("~/Content/jqueryui/css")
    <link href="~/Content/_SetStyle.css" rel="stylesheet" />
    <style>
    @RenderSection("style", required: false)
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("國內所商標網路作業系統", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-item nav-link" })</li>
                <li class="nav-item dropdown">
                    <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        客戶管理
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
                        @Html.ActionLink("商標客戶登錄", "Index", "Cust", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("商標客戶維護", "New", "Cust", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        營業交辦
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
                        @Html.ActionLink("接洽暨交辦", "New", "CaseDmt", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>
            </ul>
            <ul class="navbar-nav ml-md-auto">
                <li class="nav-item dropdown">
                    <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Help
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
                        <a class="dropdown-item" href="https://v4-alpha.getbootstrap.com/" target="_blank">v4 Alpha 6</a>
                        <a class="dropdown-item" href="https://getbootstrap.com/docs/3.3/" target="_blank">v3.3.7</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="https://getbootstrap.com/2.3.2/" target="_blank">v2.3.2</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>

@RenderSection("scripts", required: false)
